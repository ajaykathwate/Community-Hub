<% if current_user %>
  <div class="container flex flex-col justify-start">
    <div class="flex flex-row justify-between px-4 py-1">
      <p class="text-black font-semibold text-left text-lg">Notifications</p>
      <button id="btn-close-notifications">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <%= turbo_stream_from "notifications_#{user.id}" %>
    <%= turbo_frame_tag "notifications_#{user.id}" do %>
      <% @notifications.each do |notification| %>
        <%= render notification,
          user: notification.event.creator,
          video_post: notification.event.video_post,
          unread: notification.unread? %>
      <% end %>
    <% end %>
  </div>
<% end %>

<script>
  const closeNotificationsBtn = document.getElementById("btn-close-notifications")
</script>