<div id="<%= dom_id tag %>">
  <div class="flex flex-row items-center justify-start p-2">
    <%= link_to 'Go Back', :back, class:"border-gray-500 border-2 px-2 py-1 text-sm font-light rounded-full" %>
  </div>
  <div class="flex flex-row items-center justify-center">
    <p class="text-md font-semibold">Tag: <span class="tag"><%= tag.name.capitalize %></span></p>
  </div>
  <div class="flex flex-col gap-5">
    <% if tag.taggables.count == 0 %>
      <p class="text-2xl font-semibold ">No posts with this <span class="tag"><%= tag.name.capitalize %></span> tag present...</p>
    <% else %>
      <% tag.taggables.each do |taggable|%>
        <%= render 'video_posts/video_post', video_post: taggable.video_post%>
      <% end %>
    <% end %>
  </div>  
</div>
