<%= form_with(model: [@e_learning_chat_room, @video_post], remote: true) do |form| %> 

    <%= form.hidden_field :user_id, value: current_user.id %>

    <!-- validation errors here -->
    <% if @video_post.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
          <h2><%= pluralize(@video_post.errors.count, "error") %> prohibited this video_post from being saved:</h2>
          <ul>
            <% @video_post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="flex flex-1 flex-row items-center justify-between">
            <%= form.file_field :video_file, class: "hidden", id: "video_file", accept: "video/*" %>
            <label for="video_file" class="flex flex-row gap-2 bg-[#2a6fff] rounded-full items-center justify-center cursor-pointer transform hover:scale-125 transition duration-200 ease-in-out">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 text-white ">
                  <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 9a.75.75 0 0 0-1.5 0v2.25H9a.75.75 0 0 0 0 1.5h2.25V15a.75.75 0 0 0 1.5 0v-2.25H15a.75.75 0 0 0 0-1.5h-2.25V9Z" clip-rule="evenodd" />
                </svg>
            </label>
                <div class="flex-1 mx-2">
                    <%= form.text_field :title, placeholder: "Post title...", class: 'text-sm font-medium w-full bg-blue-300 border-none  rounded-full px-2 py-1 focus:ring-0  focus:border-transparent resize-none min-h-row-1 max-h-20em' %>
                </div>

                <!-- message send button -->
                <div class="text-white cursor-pointer flex justify-center items-center ">
                    <%= button_tag type: 'submit' do %>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 transform hover:scale-125 transition duration-200 ease-in-out">
                          <path d="M3.478 2.404a.75.75 0 0 0-.926.941l2.432 7.905H13.5a.75.75 0 0 1 0 1.5H4.984l-2.432 7.905a.75.75 0 0 0 .926.94 60.519 60.519 0 0 0 18.445-8.986.75.75 0 0 0 0-1.218A60.517 60.517 0 0 0 3.478 2.404Z" />
                        </svg>
                    <% end %>
            
            </div>
        </div>

<% end %>