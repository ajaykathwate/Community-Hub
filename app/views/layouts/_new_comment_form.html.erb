<%= form_with(model: @Comment,  remote: true) do |form| %>

    <%= current_user.name %>
    <div class="flex flex-1 flex-row items-center justify-between">
        <% if current_user.profile_image.attached?%>
            <%= image_tag(current_user.profile_image, class: "w-8 h-8 rounded-full") %>
        <% else %>
            <% result = current_user.name.split.map(&:first).join.upcase %>
            <% profile_bg_color = ["blue-300", "stone-400", "amber-300", "sky-500", "orange-500" ].shuffle.first  %>
            <div class="w-8 h-8 bg-amber-400 border-none rounded-full cursor-pointer flex items-center justify-center" id="btn" aria-describedby="tooltip" >
                <p class="text-gray-700 text-sm font-bold font-serif"><%= result %> </p>
            </div>
        <% end %>
        <div class="flex-1 mx-2">
            <%= form.text_field :content, placeholder: "Add a comment..", class: 'text-sm font-medium w-full bg-blue-300 border-none  rounded-full px-2 py-1 focus:ring-0  focus:border-transparent resize-none min-h-row-1 max-h-20em' %>
        </div>
        <%= form.submit "Comment", class: 'px-2 py-1 rounded-full text-black text-sm font-semibold cursor-pointer bg-[#3ea6ff]' %>
    </div>
    
<% end %>