<div class="rounded-md p-2 hover:bg-slate-200  ">
    <%= video_tag(video_post.video_file, controls: true, muted:true, class:"max-w-1/2 w-fit h-fit rounded-md") %>
    <div class="flex flex-row items-center justify-between">
        <div class="">
            <p class="text-lg text-wrap font-semibold"><%= video_post.title%></p>
            <p class="text-sm  font-medium text-gray-500">
                <%= time_ago_in_words(video_post.created_at.in_time_zone("Mumbai")) %> ago
            </p>
        </div>
        <%= link_to delete_post_path(video_post), data: { confirm: 'Are you sure?', turbo_method: :delete }, class: "block" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red-500 cursor-pointer transform hover:scale-110 transition duration-500 ease-in-out ">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
        <% end %>
    </div>
    <div class="flex flex-col">
        <p class="text-start text-md font-semibold text-slate-950 py-2"><%= video_post.comments.count %> Comments  </p>
        <div class="flex flex-row items-center justify-between">
            hello
        </div>
        <%= turbo_stream_from video_post %>
        <div id="comments" class="flex flex-row gap-5 ">
            <% @comments = video_post.comments %>
            <%= render @comments %>
        </div>

    </div>
</div>