<%= tag.div id: "user_#{user.id}_interest_#{interest.id}" do %>
    <% if user.has_interest?(interest.name) %>
        <div class="flex flex-col items-center justify-center gap-1">
            <%= button_to user_interest_path(user_id: user.id, interest_id: interest.id), method: :patch, class: "block relative" do %>
                <%= image_tag(interest.url, class:"interest-img w-20 h-20 rounded-full") %>
                <img src="https://cdn-icons-png.flaticon.com/128/391/391940.png" alt="selected-interest" class=" w-12 h-12 absolute top-1/2 -left-1/2 text-green-500">
            <% end %>
            <p class="w-28 break-words text-wrap text-gray-800 text-md text-center  font-semibold px-2 py-1 rounded-md"><%= interest.name %></p>
        </div>
    <% else %>
        <div class="flex flex-col items-center justify-center gap-1">
            <%= button_to user_interest_path(user_id: user.id, interest_id: interest.id), method: :patch, class: "block" do %>
                <%= image_tag(interest.url, class:"w-20 h-20 rounded-full") %>
            <% end %>
            <p class="w-28 break-words text-wrap text-gray-800 text-md text-center  font-semibold px-2 py-1 rounded-md"><%= interest.name %></p>
        </div>
    <% end %>
<% end %>